<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="15.5sp"
    android:padding="20dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageGalleryView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genderSpinner"
        android:gravity="center"
        android:layout_below="@+id/styleSpinner"
        android:prompt="@string/gender_prompt"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.Spinner"/>

        <Spinner
        android:id="@+id/styleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:prompt="@string/style_prompt"
        android:layout_below="@+id/imageGalleryView"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.Spinner"/>

        <Button android:text="crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cropBtn"
                android:layout_alignBottom="@+id/genderSpinner"
                android:layout_alignParentStart="true"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:text="submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
